{
  "name": "acheron",
  "productName": "Acheron",
  "version": "1.3.0",
  "description": "Hex-based MIDI sequencer",
  "type": "module",
  "scripts": {
    "dev": "tsx bin/dev.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "electron-dev": "electron-install && cross-env NODE_ENV=development electron src/main-electron.js",
    "electron-install": "node node_modules/electron/install.js"
  },
  "lint-staged": {},
  "build": {
    "productName": "Acheron",
    "appId": "com.whisperdoll.acheron",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "extraFiles": [
      "tokens/"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": null,
      "notarize": false,
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "differentialPackage": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "whisperdoll",
      "repo": "acheron"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whisperdoll/acheron.git"
  },
  "author": {
    "name": "whisperdoll",
    "email": "aliceminacarter@gmail.com",
    "url": "https://whisperdoll.github.io"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2.3.0",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "@tauri-apps/plugin-fs": "^2.2.0",
    "@tauri-apps/plugin-log": "^2.2.3",
    "@tauri-apps/plugin-opener": "^2.2.6",
    "@tauri-apps/plugin-os": "^2.2.0",
    "deep-object-diff": "^1.1.9",
    "fast-deep-equal": "^3.1.3",
    "pure-rand": "^7.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rfdc": "^1.4.1",
    "uuid": "^11.1.0",
    "webmidi": "3.1.12"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.3.1",
    "@types/node": "22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/seedrandom": "^3.0.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "sass-embedded": "^1.85.1",
    "tsx": "^4.19.3",
    "vite": "^6.2.1"
  },
  "engines": {
    "node": ">=14.x"
  }
}
