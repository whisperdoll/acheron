{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Acheron",
  "version": "1.3.0",
  "identifier": "com.whisperdoll.acheron",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Acheron",
        "width": 800,
        "height": 600,
        "zoomHotkeysEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../assets/icons/32x32.png",
      "../assets/icons/128x128.png",
      "../assets/icon.icns",
      "../assets/icon.ico"
    ]
  }
}
